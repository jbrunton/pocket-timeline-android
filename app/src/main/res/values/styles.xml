<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AutocompleteTextView" parent="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox">
        <item name="android:textColor">@drawable/edit_text_text_color</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@drawable/edit_text_text_color</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/submit_button_bg_color</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SubmitButton"></style>
    <style name="SubmitLabel"></style>
    <style name="SubmitBackground"></style>

    <style name="SubmitWidget">
    </style>

    <style name="SubmitWidget.Button">
        <item name="android:backgroundTint">@color/submit_button_bg_color</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SubmitWidget.Label" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="backgroundColor">@color/colorGreenLight</item>
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="SubmitWidget.Background">
        <item name="android:background">@color/colorGreenLight</item>
    </style>

</resources>
