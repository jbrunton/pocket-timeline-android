<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/timeline_title"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:text="World War 2" />

    <TextView
        android:id="@+id/timeline_description"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/timeline_title"
        tools:text="Events of World War 2" />

    <ImageView
        android:src="@drawable/ic_medal_24dp"
        android:id="@+id/medal"
        android:tint="@color/colorGold"
        android:backgroundTint="@color/colorGold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/medal_border"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
